@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lon Sữa Glucerna 800g</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <style>
        body {
            background-color: #f5f5f5;
            
        }

        .logo {
        }

        .Them-vao-gio {
        }

        .container {
            display: flex;
            padding: 20px 100px;
        }
        .row {
        width:30%;         
        padding:20px;
        }

        .product-img {
            width: 100%;
            
            height: auto;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .thongtin {
     
           padding:20px;
        }
        .sanpham {
            height: auto;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color:white;
            padding:10px 10px;
        }
        .price {
            font-size: 24px;
            color: red;
            font-weight: bold;
        }

        .btn-buy {
            background-color: #ff424e;
            color: white;
            width:250px;
            height:30px;
            border-radius:5px;
        }
          

        .review {
            color: #f7931e;
        }

        .info-section {
            margin-top: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: white;
            padding: 10px 10px;
        }
        .Them-vao-gio {
            
            margin-top:20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: white;
            padding: 10px 10px;
            height: 330px;
            
      
        }
        .tiki-trading {
            border-bottom:2px solid gray;
         

        }
        .btn-giohang{
            padding:1px 10px;
            color:#1d88d0;
            background-color:white;
            border-radius:5px;
            margin:5px 2px;
            width:250px;
            height:30px;
        }
        .quantity-selector {
            display: flex; /* Sử dụng Flexbox để căn chỉnh các phần tử */
            align-items: center; /* Căn giữa theo chiều dọc */
        }
        .quantity-selector input{
            width:50px;
            text-align:center;
        }

        .quantity {
            margin: 0 10px; /* Khoảng cách giữa số lượng và các nút */
            font-size: 20px; /* Kích thước chữ của số lượng */
        }

        button {
          
            border-radius: 5px; /* Bo tròn góc */
            padding: 5px 10px; /* Khoảng cách bên trong nút */
            cursor: pointer; /* Hiển thị con trỏ chuột như kiểu nhấn được */
        }

            button:hover {
                background-color: #007BFF; /* Màu nền khi di chuột qua */
                color: white; /* Màu chữ khi di chuột qua */
            }
        .hinh-mua{
            width:300px;
            padding: 10px 10px;
        }
        .slider-sanpham {
            width:100%;
            border-radius:5px;
        }

       
    </style>

</head>

<body>
    <section class="content">
        <div class="container">
            <div class="row">
                
               <img src="~/Hinh/007b2f6b3bd5e9cf699a8ab3c6995726.jpg" alt="Lon Sữa Glucerna 800g" class="product-img">
             
            </div>
            <div class="thongtin">
                <div class="sanpham">
                    <h4>Lon Sữa Glucerna 800g/lon - Tặng 2 gói dùng thử</h4>
                    <p class="review">5.0 <span>(438 Đánh giá)</span></p>
                    <p class="price">989.000₫</p>
                    <p><strong>Hương vị</strong></p>
                    <p>Vani</p>
                </div>
                

                @*Thông tin thêm*@
                <div class="info-section">
                    <h5><b>Thông tin vận chuyển</b></h5>
                    <p>Giao đến: Quận 1, TP. Hồ Chí Minh</p>
                    <p>Thời gian giao hàng: 8h - 17h (Thứ 2 - Thứ 6)</p>
                    <p>Phí vận chuyển: Freeship cho đơn từ 45k</p>

                
                </div>
            </div>
            
            <div class="mua-hang">
                <div class="Them-vao-gio">
                    <div class="tiki-trading">

                        <p>Tiki Trading</p>
                        <p class="review">5.0 <span>(438 Đánh giá)</span></p>

                    </div>

                    <p>Số Lượng</p>
                    <div class="quantity-selector">
                        <button class="btn-decrease">-</button>
                        <input type="number" class="quantity" value="1" min="1" max="100">
                        <button class="btn-increase">+</button>
                    </div>

                    <p>Tạm tính</p>
                    <p class="price">989.000 đ</p>
                    <button class="btn-buy">Mua ngay</button><br />
                    <button class="btn-giohang">Thêm vào giỏ hàng</button><br />
                    <button class="btn-giohang">Mua trước trả sau</button><br />

                </div>
                <div class="hinh-mua">
                    <img src="~/Hinh/Artboard-2.jpg" class="slider-sanpham" />

                </div>
            </div>
        </div>
    </section>
    

  
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>